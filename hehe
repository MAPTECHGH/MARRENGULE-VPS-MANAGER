    echo ""
    cd $HOME
    IP=$(wget -qO- ipv4.icanhazip.com)
    echo -e "        \033[1;33m  \033[1;32mâ—‡ INSTALLATION COMPLETED.â—‡\033[1;33m  \033[0m"
    echo ""
    echo -e "\033[1;31m\033[1;33mâ—‡ MAIN COMMAND:- \033[1;32mmenu\033[0m"
