    echo -e "\033[1;31m\033[0m"
    tput setaf 7 ; tput setab 4 ; tput bold ; printf '%40s%s%-12s\n' "â—‡â”€â”€â”€â”€â”€â”€â”€â”€â”€ã…¤ðŸŒWELCOME TO MARRENGULE VPS MANAGERðŸŒã…¤â”€â”€â”€â”€â”€â”€â”€â”€â”€â—‡" ; tput sgr0
    echo ""
    echo -e "\033[1;33mã…¤THIS SCRIPT CONTAINS THE FOLLOWING!!\033[0m"
    echo ""
