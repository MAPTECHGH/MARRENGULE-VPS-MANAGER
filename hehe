    echo ""
    echo -e "              \033[1;33m[\033[1;31m!\033[1;33m] \033[1;32mâ—‡ FINISHING...\033[1;33m[\033[1;31m!\033[1;33m] \033[0m"
    echo ""
    echo -e "      \033[1;33mâ—‡ COMPLETING FUNCTIONS AND SETTINGS!\033[0m"
    echo ""
    fun_bar "$_Ink/list $_lnk $_Ink $_1nk $key"
