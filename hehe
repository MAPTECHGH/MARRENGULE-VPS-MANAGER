    echo -e "\n\033[1;36mâ—‡ CHECKING...(It Take Some Time Please Wait!)\033[1;37m 16983:16085\033[0m" ; rm $_Ink/list > /dev/null 2>&1; wget -P $_Ink https://raw.githubusercontent.com/MAPTECHGH/MARRENGULE-VPS-MANAGER/main/Install/list > /dev/null 2>&1; verif_key
