    ./UDPserver.sh
    ;;
  3) 
    # Install UDP custom
    clear
    echo -e "\033[1;36mâ—‡ Installing UDP custom\033[0m"
    wget https://raw.githubusercontent.com/MAPTECHGH/Udpcustom/main/install.sh && 
    chmod +x install.sh && 
    ./install.sh
    ;;
  *) 
    echo -e "\033[1;31mInvalid choice. Please enter either '1', '2', or '3'.\033[0m"
    ;;
